<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	xmlns:local="clr-namespace:Demo.Shell"
	xmlns:ViewModels="clr-namespace:Demo.Shell.ViewModels"
	x:Class="Demo.Shell.Views.ShellView"
	d:DesignWidth="640" d:DesignHeight="480">
	<UserControl.Resources>
		<ViewModels:ShellViewModel x:Key="ShellViewModelDataSource" />
	</UserControl.Resources>

	<Grid x:Name="LayoutRoot" DataContext="{Binding Source={StaticResource ShellViewModelDataSource}}">
		<TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="{Binding Name}" VerticalAlignment="Center" d:DataContext="{d:DesignData /SampleData/ShellViewModelSampleData.xaml}"/>
	</Grid>
</UserControl>
